<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h4">Create Game</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model" @ref="Form">
            <MudTextField Label="Name"
                          @bind-Value="Model.Name"
                          For="@(() => Model.Name)"
                          Required
                          Variant="Variant.Outlined"
                          Class="mb-1"/>
            <MudTextField Label="SpeedModifier"
                          InputType="InputType.Number"
                          @bind-Value="Model.SpeedModifier"
                          For="@(() => Model.SpeedModifier)"
                          Required
                          Variant="Variant.Outlined"
                          Class="mb-1"/>
            <MudTextField Label="Temperature"
                          InputType="InputType.Number"
                          @bind-Value="Model.Temperature"
                          For="@(() => Model.Temperature)"
                          Required
                          Variant="Variant.Outlined"
                          Class="mb-1"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled" Disabled="Creating">OK</MudButton>
    </DialogActions>
</MudDialog>